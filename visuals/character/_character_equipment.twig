{% if characterData.help.equipment %}
    <p class="help">{{ characterData.help.equipment }}</p>
{% endif %}

<div class="clear"></div>

<div class="block padded full-width">
    <h2 class="center">Equipment</h2>
    <table>
        <thead>
        <tr>
            <th>Name / type</th>
            <th>Count</th>
            <th>Details</th>
        </tr>
        </thead>
        <tbody>
        {% if characterData.equipment %}
            {% for equipmentItem in characterData.equipment %}
                <tr>
                    <td class="left">{{ equipmentItem.name }}</td>
                    <td class="center">{{ equipmentItem.count }}</td>
                    <td class="justified">
                        {{ equipmentItem.details }}{% if equipmentItem.value %}
                            <br><span class="note">Approximate value: {{ equipmentItem.value }}</span>{% endif %}
                    </td>
                </tr>
            {% endfor %}
        {% else %}
            <tr>
                <td colspan="3" class="center note">{{ 'NO_DATA'|trans }}. {{ 'NO_DATA_ERROR_LIKELY'|trans }}.</td>
            </tr>
        {% endif %}
        </tbody>
    </table>
</div>

<div class="clear"></div>

<div class="block padded full-width">
    <h2 class="center">Weapons</h2>
    <table>
        <thead>
        <tr>
            <th>Weapon</th>
            <th>Count</th>
            <th title="Knack usually used to attack">Knack</th>
            <th title="Attack roll">Roll</th>
            <th title="Brawn included">Damage</th>
            <th>Range<br>[m]</th>
            <th title="Knacks included, optional tricks not included">Reload<br>[actions]</th>
            <th>Details</th>
        </tr>
        </thead>
        <tbody>
        {% if characterData.weapons %}
            {% for weapon in characterData.weapons %}
                <tr>
                    <td class="left">{{ weapon.name }}</td>
                    <td class="center">{{ weapon.count }}</td>
                    <td class="center">{{ weapon.knack }}</td>
                    <td class="center">{{ weapon.roll|raw }}</td>
                    <td class="center">{{ weapon.damage|raw }}</td>
                    <td class="center">{{ weapon.range|raw }}</td>
                    <td class="center">{{ weapon.reload|raw }}</td>
                    <td class="justified">{{ weapon.details|raw }}</td>
                </tr>
            {% endfor %}
        {% else %}
            <tr>
                <td colspan="8" class="center note">{{ 'NO_DATA'|trans }}</td>
            </tr>
        {% endif %}
        </tbody>
    </table>
</div>

<div class="clear"></div>

<div class="block padded">
    <h2 class="center">Income</h2>
    <table>
        <thead>
        <tr>
            <th>Source</th>
            <th>Frequency</th>
            <th>Value</th>
            <th>Currency</th>
            <th>Details</th>
        </tr>
        </thead>
        <tbody>
        {% if characterData.income %}
            {% for incomeSource in characterData.income %}
                <tr>
                    <td class="left">{{ incomeSource.name }}</td>
                    <td class="center">{{ incomeSource.frequency }}</td>
                    <td class="center">{{ incomeSource.value }}</td>
                    <td class="center">{{ incomeSource.currency }}</td>
                    <td class="justified">{{ incomeSource.details }}</td>
                </tr>
            {% endfor %}
        {% else %}
            <tr>
                <td colspan="5" class="center note">{{ 'NO_DATA'|trans }}</td>
            </tr>
        {% endif %}
        </tbody>
    </table>
</div>

<div class="block padded">
    <h2 class="center">Expenses</h2>
    <table>
        <thead>
        <tr>
            <th>Source</th>
            <th>Frequency</th>
            <th>Value</th>
            <th>Currency</th>
            <th>Details</th>
        </tr>
        </thead>
        <tbody>
        {% if characterData.expenses %}
            {% for expenseGoal in characterData.expenses %}
                <tr>
                    <td class="left">{{ expenseGoal.name }}</td>
                    <td class="center">{{ expenseGoal.frequency }}</td>
                    <td class="center">{{ expenseGoal.value }}</td>
                    <td class="center">{{ expenseGoal.currency }}</td>
                    <td class="justified">{{ expenseGoal.details }}</td>
                </tr>
            {% endfor %}
        {% else %}
            <tr>
                <td colspan="5" class="center note">{{ 'NO_DATA'|trans }}. {{ 'NO_DATA_ERROR_LIKELY'|trans }}.</td>
            </tr>
        {% endif %}
        </tbody>
    </table>
</div>

<div class="block threesplit">
    <h2 class="center">Money</h2>
    <table>
        <thead>
        <tr>
            <th>Currency</th>
            <th>Count</th>
            <th>Location</th>
        </tr>
        </thead>
        <tbody>
        {% if characterData.money %}
            {% for moneyItem in characterData.money %}
                <tr>
                    <td class="left">{{ moneyItem.currency }}</td>
                    <td class="center">{{ moneyItem.count }}</td>
                    <td class="justified">{{ moneyItem.location }}</td>
                </tr>
            {% endfor %}
        {% else %}
            <tr>
                <td colspan="3" class="center note">
                    No money found. This is likely an error, or the character has a problem.
                </td>
            </tr>
        {% endif %}
        </tbody>
    </table>
</div>

<div class="clear"></div>
