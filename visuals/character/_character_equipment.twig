        </tbody>
    </table>
</div>

<div class="block threesplit">
    <h2 class="center">{{ 'CHARACTER_CHART_HEADER_MONEY'|trans }}</h2>
    <table>
        <thead>
        <tr>
            <th>{{ 'LABEL_CURRENCY'|trans }}</th>
            <th>{{ 'LABEL_COUNT'|trans }}</th>
            <th>{{ 'LABEL_DETAILS'|trans }}</th>
        </tr>
        </thead>
        <tbody>
        {% if characterData.money %}
            {% for moneyItem in characterData.money %}
                <tr>
                    <td class="left">{{ moneyItem.currency }}</td>
                    <td class="center">{{ moneyItem.count }}</td>
                    <td class="justified">{{ moneyItem.location }}</td>
                </tr>
            {% endfor %}
        {% else %}
            <tr>
                <td colspan="3" class="center note">
                    {{ 'NO_DATA'|trans }}. {{ 'NO_DATA_ERROR_LIKELY_PROBLEM'|trans }}.
                </td>
            </tr>
        {% endif %}
        </tbody>
    </table>
</div>

<div class="clear"></div>
