{% extends "layout/page.twig" %}
{% block content %}
    <h1>Character data - {{ characterData.name }} - current information</h1>

    <div>
        <ul class="linkbox">
            <li>
                <a href="../" title="Money, Drama, reputation, ...">
                    Main
                </a>
            </li>
            <li>
                <a href="../development" title="Experience expenditures, changes in the card">
                    Development history
                </a>
            </li>
            <li>
                <a href="../reputation">
                    Deeds and misdeeds
                </a>
            </li>
            <li>
                <a href="../print">
                    Printable
                </a>
            </li>
        </ul>
    </div>

    <div class="clear"></div>

    <div class="block padded threesplit">
        <h2 class="center">Variables</h2>
        <table>
            <tbody>
            {% for variable in characterData.variables %}
                <tr title="{{ variable.description }}">
                    <td class="left">{{ variable.name }}</td>
                    <td class="center">{{ variable.value }}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

    <div class="block padded threesplit">
        <h2 class="center">Money</h2>
        <table>
            <tbody>
            {% for moneyRow in characterData.money %}
                <tr>
                    <td class="left">{{ moneyRow.currency }}</td>
                    <td class="center">{{ moneyRow.value }}</td>
                    <td class="center">{{ moneyRow.location }}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
    <div class="clear"></div>

{% endblock %}
