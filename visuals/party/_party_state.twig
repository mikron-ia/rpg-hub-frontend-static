{% if partyData.help.state %}
    <p class="help">{{ partyData.help.state }}</p>
{% endif %}

<div class="block">
    <h2 class="center">Party roster</h2>
    {% if partyData.help.members %}
        <p class="help">{{ partyData.help.members }}</p>
    {% endif %}
    <table>
        <thead>
        <tr>
            <th>Name</th>
            <th title="Apparent nationality">Nationality</th>
            <th title="Profession or trade they work in">Vocation</th>
            <th>Appearance</th>
        </tr>
        </thead>
        <tbody>
        {% if partyData.members %}
            {% for member in partyData.members %}
                <tr title="{{ member.comment }}">
                    <td class="left">{{ member.name }}</td>
                    <td class="center">{{ member.nationality }}</td>
                    <td class="center">{{ member.vocation }}</td>
                    <td class="justified">{{ member.appearance }}</td>
                </tr>
            {% endfor %}
        {% else %}
            <tr>
                <td colspan="4" class="center note">No data available</td>
            </tr>
        {% endif %}
        </tbody>
    </table>
</div>

<div class="clear"></div>