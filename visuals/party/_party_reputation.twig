<div class="block full-width">
    <h2 class="center">Party reputation</h2>
    {% if partyData.help.reputation %}
        <p class="help">{{ partyData.help.reputation }}</p>
    {% endif %}
    <table>
        <thead>
        <tr>
            <th title="">{{ 'LABEL_REPUTATION'|trans }}</th>
            <th>{{ 'LABEL_NEGATIVE_F'|trans }}</th>
            <th>{{ 'LABEL_POSITIVE_F'|trans }}</th>
            <th title="{{ 'PARTY_INFLUENCE_EXPLANATION'|trans }}">{{ 'LABEL_INFLUENCE'|trans }}</th>
            <th>{{ 'LABEL_BALANCE'|trans }}</th>
            <th>{{ 'LABEL_DICE'|trans }}</th>
        </tr>
        </thead>
        <tbody>
        {% if partyData.reputation %}
            {% for reputation in partyData.reputation %}
                <tr title="{{ reputation.description }}">
                    <td class="left">{{ reputation.name }}</td>
                    <td class="center" title="{{ 'Lowest ever'|trans }}: {{ reputation.negativeMin }}">{{ reputation.negative }}</td>
                    <td class="center" title="{{ 'Highest ever'|trans }}: {{ reputation.positiveMax }}">{{ reputation.positive }}</td>
                    <td class="center">{{ reputation.influence }}</td>
                    <td class="center">{{ reputation.balance }}</td>
                    <td class="center">{{ reputation.dice }}</td>
                </tr>
            {% endfor %}
        {% else %}
            <tr>
                <td colspan="6" class="center note">{{ 'No data available'|trans }}</td>
            </tr>
        {% endif %}
        </tbody>
    </table>
</div>

<div class="clear"></div>

<div class="block full-width">
    <h2 class="center">Personal reputation of party members</h2>
    {% if partyData.help.membersReputations %}
        <p class="help">{{ partyData.help.membersReputations }}</p>
    {% endif %}
    {% if partyData.membersReputations %}
        {% for memberReputation in partyData.membersReputations %}
            <div class="block padded twosplit">
                <table>
                    <caption>{{ memberReputation.name }}</caption>
                    <thead>
                    <tr>
                        <th title="{{ 'Name of the reputation'|trans }}">{{ 'LABEL_REPUTATION'|trans }}</th>
                        <th>{{ 'LABEL_NEGATIVE_F'|trans }}</th>
                        <th>{{ 'LABEL_POSITIVE_F'|trans }}</th>
                        <th>{{ 'LABEL_BALANCE'|trans }}</th>
                        <th>{{ 'LABEL_DICE'|trans }}</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% if memberReputation.reputations %}
                        {% for reputation in memberReputation.reputations %}
                            <tr title="{{ reputation.description }}">
                                <td class="left">{{ reputation.name }}</td>
                                <td class="center" title="{{ 'Lowest ever'|trans }}: {{ reputation.negativeMin }}">{{ reputation.negative }}</td>
                                <td class="center" title="{{ 'Highest ever'|trans }}: {{ reputation.positiveMax }}">{{ reputation.positive }}</td>
                                <td class="center">{{ reputation.balance }}</td>
                                <td class="center">{{ reputation.dice }}</td>
                            </tr>
                        {% endfor %}
                    {% else %}
                        <tr>
                            <td colspan="5" class="center note">{{ "No data for the person given"|trans }}</td>
                        </tr>
                    {% endif %}
                    </tbody>
                </table>
            </div>
        {% endfor %}
        <div class="clear"></div>
    {% else %}
        <p class="note">
            {{ 'No data lists found - please contact the GM or verify data source'|trans }}
        </p>
    {% endif %}
</div>

<div class="clear"></div>
