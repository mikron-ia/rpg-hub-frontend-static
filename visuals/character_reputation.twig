{% extends "layout/page.twig" %}
{% block content %}
    <h1>Character data - {{ characterData.name }} - development history</h1>

    <div>
        <ul class="linkbox">
            <li>
                <a href="../" title="Money, Drama, reputation, ...">
                    Main
                </a>
            </li>
            <li>
                <a href="../current" title="Money, Drama, reputation, ...">
                    Current data
                </a>
            </li>
            <li>
                <a href="../development" title="Experience expenditures, changes in the card">
                    Development history
                </a>
            </li>
            <li>
                <a href="../print">
                    Printable
                </a>
            </li>
        </ul>
    </div>

    <div class="clear"></div>

    <div class="block padded">
        <h2 class="center">Reputation table</h2>
        <table>
            <thead>
            <tr>
                <th>Reputation</th>
                <th>Negative</th>
                <th>Positive</th>
                <th>Balance</th>
                <th>Dice</th>
                <th>Details</th>
            </tr>
            </thead>
            <tbody>
            {% for reputation in characterData.reputations %}
                <tr title="{{ reputation.description }}">
                    <td class="left">{{ reputation.name }}</td>
                    <td class="center" title="Lowest ever: {{ reputation.negativeMin }}">{{ reputation.negative }}</td>
                    <td class="center" title="Highest ever: {{ reputation.positiveMax }}">{{ reputation.positive }}</td>
                    <td class="center">{{ reputation.balance }}</td>
                    <td class="center">{{ reputation.dice }}</td>
                    <td class="center">{{ reputation.details }}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

    <div class="clear"></div>

    <div class="block padded">
        <h2 class="center">Reputation events</h2>
        <table>
            <thead>
            <tr>
                <th>Event</th>
                <th>Reputation</th>
                <th>Change</th>
                <th>New value</th>
                <th>When</th>
                <th>Notes</th>
            </tr>
            </thead>
            <tbody>
            {% if characterData.reputationHistory %}
                {% for reputationEvent in characterData.reputationHistory %}
                    <tr>
                        <td class="left">{{ reputationEvent.name }}</td>
                    </tr>
                {% endfor %}
            {% else %}
                <tr>
                    <td colspan="7" class="center note">No data available</td>
                </tr>
            {% endif %}
            </tbody>
        </table>
    </div>

    <div class="clear"></div>
{% endblock %}
